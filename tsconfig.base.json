{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@stonehenge/api-interfaces": ["libs/api-interfaces/src/index.ts"],
      "@stonehenge/footer": ["libs/footer/src/index.ts"],
      "@stonehenge/footer-public": ["libs/footer-public/src/index.ts"],
      "@stonehenge/header": ["libs/header/src/index.ts"],
      "@stonehenge/header-public": ["libs/header-public/src/index.ts"],
      "@stonehenge/prop-types": ["libs/prop-types/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
